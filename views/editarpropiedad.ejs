                      <%if(propiedad.baños.substring(propiedad.baños.length-1,propiedad.baños.length) == "½"){%>
                        <%propiedad.baños=propiedad.baños.substring(0,propiedad.baños.length-2);%>
                        <%ymedio=true;%>
