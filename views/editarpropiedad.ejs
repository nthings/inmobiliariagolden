                <form action="/editarpropiedad" enctype='multipart/form-data' id="editar" method="POST">
                  <div class="row">
                      <div class="form-group col-xs-12">
                          <label for="ventaorenta"><i class="fa fa-home fa-fw"></i>Venta ó Renta</label>
