            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <img class="img-responsive" src="<%=propiedad.url%>" alt="">
            </div>

            <div class="col-md-4 text-center">
                <h2>$<%=propiedad.precio.toLocaleString()%></h2>
                <h3>Tipo</h3>
                <p class="capitalize"><%=propiedad.tipo%></p>
                <h3>Descripción</h3>
                <p><%=propiedad.descripcion%></p>
                <h3>Detalles</h3>
                <ul class="list-inline">
                    <li>
                        <object type="image/svg+xml" data="../svg/home-page.svg" class="icono"></object>
                        <%=propiedad.m2%>m2
                    </li>
                    <li>
                        <object type="image/svg+xml" data="../svg/bed.svg" class="icono"></object>
                        <%=propiedad.recamaras%>
                    </li>
                    <li>
                        <object type="image/svg+xml" data="../svg/shower.svg" class="icono"></object>
                        <%=propiedad.baños%>
                    </li>
                </ul>
                <h3>Asesor de Venta</h3>
                <img class="img-circle img-responsive img-center" src="<%=propiedad.foto%>" alt="">
                <h4><%=propiedad.nombre%>
                    <small><%=propiedad.telefono%></small>
                </h4>
            </div>

        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Ubicación</h3>
            </div>
            <div class="col-lg-12">
                <h4><%=propiedad.direccion%></h4>
            </div>
        </div>
        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Más Fotos</h3>
            </div>
            <% if (typeof(fotos) != 'undefined') {%>
            <% fotos.forEach(function(foto) { %>
            <div class="col-sm-3 col-xs-6">
                <a id="<%=foto.idfotos%>">
                    <img class="img-responsive portfolio-item" src="<%=foto.url%>" alt="">
                </a>
            </div>
            <% }); %>
            <%}else{%>
            <div class="col-xs-12"><h1>NO HAY GALERÍA</h1></div>
            <%}%>

        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer id="contacto">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Contacto</h2>
                </div>
                <div class="col-xs-12 col-sm-6 text-center">
                    <div id="map_container2"></div>
                    <div id="map2"></div>
                </div>  
                <div class="col-xs-12 col-sm-6 text-center">
                    <p>Agencia Inmobiliaria Golden</p>
                    <p>Dirección: </p>
                    <p>Teléfono: </p>
                    <h3>Desarrollado por:</h3>
                    <img src="../hittek.png" width="150px" />
                </div>  
            </div>
        </footer>

    </div>
    <!-- /.container -->
    <div id="foto" class="modal fade" role="dialog">
      <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
            <img src="../picture.png" class="img-responsive img-center" id="fotogrande">
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger btn-block" data-dismiss="modal">CERRAR</button>
        </div>
    </div>

</div>
