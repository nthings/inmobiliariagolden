<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="<%=variables.nombreinmobiliaria%>">
    <meta name="author" content="<%=propiedad.nombre%>">
    <meta property="og:image" content="https://<%=variables.dominio%><%=propiedad.url%>" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1024" />
    <meta property="og:image:height" content="1024" />

    <title>Agencia Inmobiliaria Golden -
        <%=propiedad.nombrepropiedad%>
    </title>

    <!-- Bootstrap Core CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="../css/item.css" rel="stylesheet">
    <link href="../font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->

</head>

<body>
    <!-- Loading -->
    <div class="se-pre-con"></div>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="/">
                    <img src="../golden.png" id="logo" height="80px" alt="">
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/#propiedades"><i class="fa fa-home fa-fw"></i> Propiedades</a>
                    </li>
                    <li>
                        <a href="/#asesores"><i class="fa fa-users fa-fw"></i> Asesores</a>
                    </li>
                    <li>
                        <a href="/#contacto" class="animado"><i class="fa fa-phone fa-fw"></i>Contacto</a>
                    </li>
                    <li>
                        <a href="/panel"><i class="fa fa-database fa-fw"></i>Panel</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <%= propiedad.nombrepropiedad%>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <img class="img-responsive watermark" src="<%=propiedad.url%>" alt="">
            </div>

            <div class="col-md-4 text-center">
                <h2>$
                    <%=propiedad.precio.toLocaleString()%>
                </h2>
                <h3>Tipo</h3>
                <p class="capitalize">
                    <%=propiedad.tipo%>
                </p>
                <h3>Descripción</h3>
                <p>
                    <%=propiedad.descripcion%>
                </p>
                <h3>Detalles</h3>
                <ul class="list-inline">
                    <li>
                        <object type="image/svg+xml" data="../svg/metros.svg" class="icono"></object>
                        <%=propiedad.m2%>m2
                    </li>
                    <%if(propiedad.metrosconstruidos != 0){%>
                    <li>
                        <i class="fa fa-home fa-fw icono"></i>
                        <%=propiedad.metrosconstruidos%>M. Constr.
                    </li>
                    <%}%>
                    <%if(propiedad.recamaras != 0){%>
                    <li>
                        <i class="fa fa-bed fa-fw icono"></i>
                        <%=propiedad.recamaras%>
                    </li>
                    <%}%>
                    <%if(propiedad.baños != 0){%>
                    <li>
                        <i class="fa fa-bath fa-fw icono"></i>
                        <%=propiedad.baños%>
                    </li>
                    <%}%>
                    <%if(propiedad.cochera != 0){%>
                    <li>
                        <i class="fa fa-car fa-fw icono"></i>
                        <%=propiedad.cochera%>
                    </li>
                    <%}%>
                </ul>
                <h3>Asesor de Venta</h3>
                <img id="fotoasesor" class="img-circle img-responsive img-center" src="" alt="">
                <h4>
                    <%=propiedad.nombre%>
                    <small>
                        <%=propiedad.telefono%></small>
                </h4>
            </div>

        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Ubicación</h3>
            </div>
            <div class="col-lg-12">
                <h4>
                    <%=propiedad.direccion%>
                </h4>
            </div>
        </div>
        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Más Fotos</h3>
            </div>
            <% if (typeof(fotos) != 'undefined') {%>
            <% fotos.forEach(function(foto) { %>
            <div class="col-sm-3 col-xs-6">
                <a id="<%=foto.idfotos%>">
                    <img class="img-responsive portfolio-item watermark2" src="<%=foto.url%>" alt="">
                </a>
            </div>
            <% }); %>
            <%}else{%>
            <div class="col-xs-12">
                <h1>NO HAY GALERÍA</h1>
            </div>
            <%}%>

        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer id="contacto">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Contacto</h2>
                </div>
                <div class="col-xs-12 col-sm-6 text-center">
                    <div id="map_container2"></div>
                    <div id="map2"></div>
                </div>
                <div class="col-xs-12 col-sm-6 text-center">
                    <p>Agencia Inmobiliaria
                        <%=variables.nombreinmobiliaria%>
                    </p>
                    <p>
                        <%=variables.direccion%>
                    </p>
                    <p>
                        <%=variables.telefono%>
                    </p>

                    <h3>Desarrollado por:</h3>
                    <a href="http://hittek.mx"><img id="hittek" src="" width="150px" /></a>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->
    <% if (typeof(fotos) != 'undefined') {%>
    <% fotos.forEach(function(foto) { %>
    <div id="modal<%=foto.idfotos%>" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <img src="<%=foto.url%>" class="img-responsive img-center watermarkmodal">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-block" data-dismiss="modal">CERRAR</button>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
    <%}else{%>
    <%}%>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA="
        crossorigin="anonymous"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyBCn5x5fCG9lOB6M2mjvKbcNT_KlOzubnQ"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
    <script src="../js/funcioneshittek.js"></script>
    <script src="../js/jquery.watermark.min.js"></script>


    <script type="text/javascript">
        // Animación de entrada
        $(window).on('load', function () {
            // Animate loader off screen
            $(".se-pre-con").fadeOut("slow");
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
        <% if (typeof (fotos) != 'undefined') {%>
            <% fotos.forEach(function (foto) { %>
                    $('#<%=foto.idfotos%>').click(function () {
                        $('#modal<%=foto.idfotos%>').modal('show');
                    });
                <% }); %>
            <%} else {%>
            <%}%>

                $('#fotoasesor').attr("src", "<%=propiedad.foto%>");
            $('#hittek').attr("src", "../logo.png");
            $('.watermark').watermark({
                path: '../watermark.png',
                gravity: 's',
                opacity: 0.2,
                margin: 100,
            });
            $('.watermarkmodal').watermark({
                path: '../watermark.png',
                gravity: 's',
                opacity: 0.2,
                margin: 100,
            });
            $('.watermark2').watermark({
                path: '../watermark.png',
                gravity: 's',
                opacity: 0.2,
                margin: 100,
            });

            /*Mapa google*/
            function initMap() {
                var icono = '../pin.png';
                // Mapa Contacto
                var latitud2 = '24.034549';

                var longitud2 = '-104.672182';
                var myLatlng2 = new google.maps.LatLng(latitud2, longitud2);
                var mapOptions2 = {
                    zoom: 16,
                    center: myLatlng2,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                }

                var map2 = new google.maps.Map(document.getElementById('map2'), mapOptions2);
                //Callout Content
                var contentString2 = '<%=variables.nombreinmobiliaria%>';
                //Set window width + content
                var infowindow2 = new google.maps.InfoWindow({
                    content: contentString2,
                    maxWidth: 500
                });

                //Add Marker
                var marker2 = new google.maps.Marker({
                    position: myLatlng2,
                    map: map2,
                    icon: icono,
                    title: 'image title'
                });

                infowindow2.open(map2, marker2);

                google.maps.event.addListener(marker2, 'click', function () {
                    infowindow2.open(map2, marker2);
                });

                //Resize Function
                google.maps.event.addDomListener(window, "resize", function () {
                    var center2 = map2.getCenter();
                    google.maps.event.trigger(map2, "resize");
                    map2.setCenter(center2);

                });

            }
            google.maps.event.addDomListener(window, 'load', initMap);
        });



        /*Animación al dar click a menú*/
        $(document).on('click', '.animado', function (event) {
            event.preventDefault();

            $('html, body').animate({
                scrollTop: $($.attr(this, 'href')).offset().top
            }, 500);
        });

    </script>

</body>

</html>